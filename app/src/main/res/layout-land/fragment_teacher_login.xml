<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ehb.dtsid_inapp.TeacherFragments.TeacherLogin"
    android:id="@+id/logincontainer">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_label_docent_loginscreen"
            android:id="@+id/tv_label_docent_loginscreen"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_label_event_loginscreen"
            android:id="@+id/tv_label_event_loginscreen"
            android:layout_below="@+id/tv_label_docent_loginscreen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="75dp"
            android:textSize="16sp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_docent_loginscreen"
            android:spinnerMode="dropdown"
            android:layout_alignTop="@+id/tv_label_docent_loginscreen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tv_label_event_loginscreen"
            android:layout_toEndOf="@+id/tv_label_event_loginscreen" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_event_loginscreen"
            android:layout_alignTop="@+id/tv_label_event_loginscreen"
            android:layout_toRightOf="@+id/tv_label_event_loginscreen"
            android:layout_toEndOf="@+id/tv_label_event_loginscreen"
            android:spinnerMode="dropdown" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_btn_login_loginscreen"
            android:id="@+id/btn_login_loginscreen"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:onClick="goToOtherFragment" />

    </RelativeLayout>
</RelativeLayout>
