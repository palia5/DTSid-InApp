<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ehb.dtsid_inapp.TeacherFragments.DepartmentLogin"
    android:id="@+id/launchcontainer">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_label_department_launchscreen"
            android:id="@+id/tv_label_departement_launchscreen"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_label_code_launchscreen_landscape"
            android:id="@+id/tv_label_code_launchscreen"
            android:layout_below="@+id/tv_label_departement_launchscreen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="75dp"
            android:textSize="16sp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_departement_launchscreen"
            android:spinnerMode="dropdown"
            android:layout_alignTop="@+id/tv_label_departement_launchscreen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tv_label_departement_launchscreen"
            android:layout_toEndOf="@+id/tv_label_departement_launchscreen" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_btn_bevestigen_launchscreen"
            android:id="@+id/btn_bevestigen_launchscreen"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:onClick="goToOtherFragment" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_code_launchscreen"
            android:layout_alignTop="@+id/tv_label_code_launchscreen"
            android:layout_alignLeft="@+id/sp_departement_launchscreen"
            android:layout_alignStart="@+id/sp_departement_launchscreen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
