<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ehb.dtsid_inapp.TeacherFragments.OptionsPreferences"
    android:id="@+id/preferencescontainer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_label_autosync_preferences"
        android:id="@+id/tv_label_autosync_preferences" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_label_syncdate_preferences"
        android:id="@+id/tv_label_syncdate_preferences"
        android:layout_marginTop="104dp"
        android:layout_below="@+id/tv_label_autosync_preferences"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_label_synconclose_preferences"
        android:id="@+id/tv_label_synconclose_preferences"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/tv_label_syncdate_preferences"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sw_autosync_preferences"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_syncdate_preferences"
        android:checked="false"
        android:layout_alignTop="@+id/tv_label_syncdate_preferences"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_synconclose_preferences"
        android:checked="false"
        android:layout_alignTop="@+id/tv_label_synconclose_preferences"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tp_syncdate_preferences"
        android:layout_alignTop="@+id/cb_syncdate_preferences"
        android:layout_toLeftOf="@+id/cb_syncdate_preferences"
        android:layout_above="@+id/cb_synconclose_preferences" />
</RelativeLayout>