<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ehb.dtsid_inapp.StudentFragments.StudentRegistration">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo_ehb"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_label_email_subscription1"
        android:id="@+id/tv_label_email_subscription1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="32sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_email_subscription1"
        android:layout_below="@+id/tv_label_email_subscription1"
        android:layout_alignLeft="@+id/tv_label_email_subscription1"
        android:layout_alignStart="@+id/tv_label_email_subscription1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_label_naam_subscription1"
        android:id="@+id/tv_label_naam_subscription1"
        android:textSize="32sp"
        android:layout_below="@+id/et_email_subscription1"
        android:layout_alignLeft="@+id/et_email_subscription1"
        android:layout_alignStart="@+id/et_email_subscription1"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_naam_subscription1"
        android:layout_below="@+id/tv_label_naam_subscription1"
        android:layout_alignLeft="@+id/et_email_subscription1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_label_voornaam_subscription1"
        android:id="@+id/tv_label_voornaam_subscription1"
        android:textSize="32sp"
        android:layout_below="@+id/et_naam_subscription1"
        android:layout_alignLeft="@+id/et_naam_subscription1"
        android:layout_alignStart="@+id/et_naam_subscription1"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_voornaam_subscription1"
        android:layout_below="@+id/tv_label_voornaam_subscription1"
        android:layout_alignLeft="@+id/et_naam_subscription1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_label_straat_subscription1"
        android:id="@+id/tv_label_straat_subscription1"
        android:textSize="32sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="125dp"
        android:layout_marginRight="465dp" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_straat_subscription1"
        android:layout_below="@+id/tv_label_straat_subscription1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_label_huisnummer_subscription1"
        android:id="@+id/tv_label_huisnummer_subscription1"
        android:textSize="32sp"
        android:layout_above="@+id/et_email_subscription1"
        android:layout_alignLeft="@+id/et_huisnummer_subscription1"
        android:layout_alignStart="@+id/et_huisnummer_subscription1" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_huisnummer_subscription1"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_label_huisnummer_subscription1"
        android:layout_alignRight="@+id/et_straat_subscription1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="350dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_label_postcode_subscription1"
        android:id="@+id/tv_label_postcode_subscription1"
        android:textSize="32sp"
        android:layout_alignTop="@+id/tv_label_huisnummer_subscription1"
        android:layout_alignLeft="@+id/et_postcode_subscription1"
        android:layout_alignStart="@+id/et_postcode_subscription1" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_postcode_subscription1"
        android:layout_below="@+id/tv_label_postcode_subscription1"
        android:layout_alignRight="@+id/et_straat_subscription1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_label_gemeente_subscription1"
        android:id="@+id/tv_label_gemeente_subscription1"
        android:textSize="32sp"
        android:layout_alignBottom="@+id/tv_label_naam_subscription1"
        android:layout_alignLeft="@+id/et_huisnummer_subscription1"
        android:layout_alignStart="@+id/et_huisnummer_subscription1" />

    <Spinner
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/sp_gemeente_subscription1"
        android:layout_below="@+id/tv_label_gemeente_subscription1"
        android:layout_alignLeft="@+id/tv_label_gemeente_subscription1"
        android:layout_alignStart="@+id/tv_label_gemeente_subscription1"
        android:spinnerMode="dropdown" />

</RelativeLayout>
