<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="be.ehb.dtsid_inapp.TeacherFragments.Options"
    android:background="@drawable/ehbackground">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txt_label_departement_dashboard"
            android:id="@+id/tv_label_departement_dashboard"
            android:textSize="16sp"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_gekozen_departement_dashboard"
            android:text="@string/txt_gekozen_departement_dashboard"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txt_label_medewerker_dashboard"
            android:id="@+id/tv_label_medewerker_dashboard"
            android:textSize="16sp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txt_gekozenmedewerker_dashboard"
            android:id="@+id/tv_gekozen_medewerker_dashboard"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txt_label_evenement_dashboard"
            android:id="@+id/tv_label_evenement_dashboard"
            android:layout_alignParentTop="false"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txt_gekozenevenement_dashboard"
            android:id="@+id/tv_gekozen_evenement_dashboard"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txt_label_studentteller_dashboard"
            android:id="@+id/tv_studentteller_dashboard"
            android:textSize="16sp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txt_aantalstudenten_dashboard"
            android:id="@+id/tv_aantalstudenten"
            android:layout_below="@+id/btn_regios"
            android:layout_alignLeft="@+id/tv_studentteller_dashboard"
            android:layout_alignStart="@+id/tv_studentteller_dashboard"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="25dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="550dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="150dp"
        android:id="@+id/linearLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_empty_large"
                android:textColor="#ffffffff"
                android:text="@string/txt_btn_student_registreren"
                android:id="@+id/btn_student_registreren"
                android:textSize="16sp"
                android:layout_marginTop="44dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_empty_large"
                android:textColor="#ffffffff"
                android:text="@string/txt_btn_lijst"
                android:id="@+id/btn_lijst"
                android:textSize="16sp"
                android:layout_marginTop="44dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_btn_regios"
                android:background="@drawable/button_empty_large"
                android:textColor="#ffffffff"
                android:id="@+id/btn_regios"
                android:textSize="16sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="44dp"
                android:layout_marginLeft="44dp"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="@string/txt_btn_opties"
                android:background="@drawable/button_empty_large"
                android:textColor="#ffffffff"
                android:id="@+id/btn_opties"
                android:textSize="16sp"
                android:layout_marginBottom="44dp"
                android:layout_marginRight="44dp"
                android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="75dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txt_label_laatste_synchronisatie"
            android:id="@+id/tv_laatste_synchronisatie"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/tv_datum_laatste_synchronisatie"
            android:layout_weight="1"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/txt_tv_datum_laatste_synchronisatie"
            android:id="@+id/tv_datum_laatste_synchronisatie"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignBottom="@+id/tv_laatste_synchronisatie"
            android:layout_weight="1"
            android:layout_marginTop="20dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_btn_sync"
            android:background="@drawable/button_empty_small"
            android:textColor="#ffffffff"
            android:id="@+id/btn_sync_dashboard"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/tv_datum_laatste_synchronisatie"
            android:layout_margin="10dp" />
    </LinearLayout>

</RelativeLayout>
